# Server Configuration
PORT=3015
NODE_ENV=development

# MongoDB Configuration
RENTALS_MONGO_URI=mongodb://localhost:27017
RENTALS_MONGO_DB_NAME=rentals_db
RETENTION_DAYS=90
EVENT_INBOX_TTL_DAYS=30

# NATS Configuration
NATS_URL=nats://localhost:4222
NATS_QUEUE_GROUP=rental-service
NATS_JETSTREAM_ENABLED=false
NATS_SUBJECTS=rental.started,rental.renewed,rental.ended,rental.returned

# Payment Gateway Configuration
PAYMENT_GATEWAY_BASE_URL=https://api.payment-gateway.example.com
PAYMENT_GATEWAY_API_KEY=your-api-key-here
PAYMENT_TIMEOUT_MS=5000
PAYMENT_RETRY_ATTEMPTS=2

# OPA (Open Policy Agent) Configuration
OPA_URL=http://localhost:8181
OPA_POLICY_PATH=/v1/data/rentals/allow
OPA_FAIL_OPEN=true
OPA_TIMEOUT_MS=3000

# JWT Authentication Configuration
AUTH_JWT_REQUIRED=false
AUTH_JWT_ISSUER=https://auth.example.com
AUTH_JWT_AUDIENCE=rental-service
AUTH_JWKS_URI=https://auth.example.com/.well-known/jwks.json
AUTH_JWT_SECRET=dev-secret-key-change-in-production

# Logging Configuration
LOG_LEVEL=info
